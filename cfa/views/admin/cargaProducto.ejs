<!DOCTYPE html>
<html lang="en">

<%- include('partials/head.ejs') %>

    <body>
        <%- include('partials/header.ejs') %>

            <div class="container mt-1 mb-1">
                <form action="/admin/productos/guardar" method="POST" enctype="multipart/form-data">
                    <div class="carga-content">
                        <div class="titulo-carga col-12">
                            <h2 class="products-title-home">Carga de Producto</h2>
                        </div>
                        <div class="col-lg-8">
                            <div class="form-floating mb-3">
                                <div class="">
                                    <input class="form-control form-control-lg" type="file" id="formFile" name="img">
                                    <p id="errorFormFile" class="text-danger"><%= (typeof errores!='undefined' && errores.formFile)?errores.formFile.msg : null %></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10 col-lg-8">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="nombre" placeholder="nombre" name="nombre">
                                <p id="errorNombre" class="text-danger"><%= (typeof errores!='undefined' && errores.nombre)?errores.nombre.msg : null %></p>
                                <label for="modelo">Nombre del Producto</label>
                            </div>
                        </div>
                        <div class="col-md-10 col-lg-8">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="detalle" placeholder="detalle" name="detalle" style="height: 150px;">
                                <p id="errorDetalle" class="text-danger"><%= (typeof errores!='undefined' && errores.detalle)?errores.detalle.msg : null %></p>
                                <label for="modelo">Detalle del Producto</label>
                            </div>
                        </div>
                        <div class="col-md-10 col-lg-8">
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control" id="precio" placeholder="precio" name="precio">
                                <p id="errorPrecio" class="text-danger"><%= (typeof errores!='undefined' && errores.precio)?errores.precio.msg : null %></p>
                                <label for="modelo">Precio del Producto</label>
                            </div>
                        </div>
                        <div class="col-md-10 col-lg-8">
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control" id="oferta" placeholder="oferta" name="oferta">
                                <p id="errorOferta" class="text-danger"><%= (typeof errores!='undefined' && errores.nombre)?errores.nombre.msg : null %></p>
                                <label for="modelo">Oferta del Producto</label>
                            </div>
                        </div>
                        <div class="col-md-10 col-lg-8">
                            <div class=" mb-3">
                                <select name="categoria" id="categoria" class="form-select">
                                        <option selected disabled>Elige Categor√≠a</option>
                                    <% categorias.forEach(categoria => { %>
                                        <option value=<%=categoria.id%>> <%=categoria.name%> </option>
                                    <% }) %>
                                </select>
                                <p id="errorCategoria" class="text-danger"><%= (typeof errores!='undefined' && errores.categoria)?errores.categoria.msg : null %></p>
                            </div>
                        </div>
                        <div class="d-grid gap-2 col-md-10 col-lg-8">
                            <button class="btn btn-primary" type="submit">Guardar</button>
                        </div>
                    </div>
                </form>
            </div>

            <%- include('partials/footer.ejs') %>
            <script src="/javascripts/cargaProducto.js"></script>
    </body>

</html>
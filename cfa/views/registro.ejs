<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs') %>

  <body>
    <%- include('partials/header.ejs') %>

      <div class="container">

        <div class="container form">

          <form class="container registro id=myDIV" id="form" action="" method="POST" enctype="multipart/form-data">
            <h1>Registro</h1>

            <div class="Crear">
              <h2>Crear cuenta</h2>
            </div>
            <div class="media">
              <div class="image"><img src="/images/Registro.png" alt="placeholder"></div>
              <div class="content"><input type="file" id="foto_x" name="avatar"></div>
            </div>

            <!-- <div class="button guardar">
              <button type="button" class="btn btn-outline-primary reg"> Guardar</button>
            </div> -->
            <div class="Entradas">
              <input type="text" name="email" id="email" value="<%= (typeof data!='undefined' && data.email)?data.email : "" %>" placeholder="Ingresa tu email">
              

              <p><%= (typeof errores!='undefined' && errores.email)?errores.email.msg : "" %></p>

              <label for="pass"></label>
              <input type="password" name="password" id="password" value="<%= (typeof data!='undefined' && data.pass)?data.pass : "" %>" placeholder="Ingresa tu contraseña">
              

              <p><%= (typeof errores!='undefined' && errores.pass)?errores.pass.msg : ""%></p>

              <label for="pass"></label>
              <input type="password" name="pass2" id="password2" value="<%= (typeof data!='undefined' && data.pass2)?data.pass2 : "" %>" placeholder="Repetir contraseña">

              <p><%= (typeof errores!='undefined' && errores.pass2)?errores.pass2.msg : "" %></p>


              <br>
              <div class="datos">
                <h2>Datos personales</h2>
              </div>

              <input type="text" name="name" value="<%= (typeof data!='undefined' && data.nombre)?data.nombre : "" %>"  id="name" placeholder="Nombre">
              <p><%= (typeof errores!='undefined' && errores.nombre)?errores.nombre.msg : "" %></p>
              <span id="errorName" class="text-danger"></span>

              <label for="Apellido"></label>
              <input type="text" name="last_name" id="last_name" value="<%= (typeof data!='undefined' && data.apellido)?data.apellido : "" %>"  placeholder="Apellido">
              <p><%= (typeof errores!='undefined' && errores.apellido)?errores.apellido.msg : "" %></p>
              <br><br>

            </div>

            <div class="button enviar">
              <button type="submit" class="btn btn-primary btn-lg ">Enviar</button>
            </div>

            <% if (typeof error !='undefined' ) { %>
              <div class="alert alert-danger">
                <span>
                  <%= error %>
                </span>
              </div>

              <% } %>

          </form>

        </div>
      </div>
      <%- include('partials/footer.ejs') %>


      <script src="/javascripts/app.js"></script>
  </body>

</html>